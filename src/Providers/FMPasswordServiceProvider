<?php

namespace BlueFeather\EloquentFileMaker\Providers;

use Illuminate\Support\ServiceProvider;
use App;

class FMPasswordServiceProvider extends ServiceProvider
{
    /**
     * Register services.
     *
     * @return void
     */
    public function register()
    {
        //
    }

    /**
     * Bootstrap services.
     *
     * @return void
     */
    public function boot()
    {
        $this->app->singleton('fm.auth.password', fn ($app) => new \BlueFeather\EloquentFileMaker\Password\FMPasswordBrokerManager($app));
    }
}
